<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <title>HAR ANALYZER</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script type="text/javascript" src="server.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <p class="greeding">Welcome back. If you are new here sign up now. </p>
    
    <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %> </div>
    <% } %>

  
    <ul>
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %> </div>
        <% } %>
    </ul>

    <div class="wrapper">
        <div class="title-text">
            <div class="title login">Login Form</div>
        </div>
        <div class="form-container">
            <div class="form-inner">
                <form method="POST" action="/users/login" class="login">
                    <!-- LOGIN FORM-->
                    <div class="field"><input id="loguser" name="username" type="text" placeholder="Username" required></div>
                    <div class="field"><input id="logpass" name="password" type="password" placeholder="Password" required></div>
                    <div class="pass-link"><a href="#">Forgot password?</a></div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input type="submit" value="Login">
                    </div>
                    <div class="signup-link">Not a member?<a href="signup.ejs">Sign up now.</a></div>
                </form>

            </div>
        </div>
    </div>

    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
        <li><%= error.message %></li>
        <% }) %> <% } %>
    </ul>



</body>

</html>